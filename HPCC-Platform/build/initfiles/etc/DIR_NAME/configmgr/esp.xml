<Environment>
<Software>
<EspProcess build="_" description="ESP server" componentfilesDir="/opt/HPCCSystems/componentfiles" enableSEHMapping="true" enableSNMP="false" formOptionsAccess="false" httpConfigAccess="true" logDir="/var/log/HPCCSystems/configmgr" logLevel="1" logRequests="true" logResponses="false" txSummaryLevel="1" txSummaryResourceReq="false" maxBacklogQueueSize="200" maxConcurrentThreads="0" name="configmgr" perfReportDelay="60" computer="localhost" directory="/var/run/HPCCSystems/configmgr">
<Environment/>
<EspProtocol name="http" type="http_protocol" plugin="esphttp" maxRequestEntityLength="8000000"/>
<EspService name="WsDeploy_wsdeploy_esp" type="WsDeploy" plugin="WsDeploy">
  <LocalEnvFile>/etc/HPCCSystems/environment.xml</LocalEnvFile>
  <LocalConfFile>/opt/HPCCSystems/etc/HPCCSystems/configmgr/configmgr.conf</LocalConfFile>
  <LocalEnvConfFile>/etc/HPCCSystems/environment.conf</LocalEnvConfFile>
</EspService>
<EspBinding name="WsDeploy_EspBinding_esp" service="WsDeploy_wsdeploy_esp" protocol="http" type="WsDeploySoapBinding" plugin="WsDeploy" netAddress="0.0.0.0" port="8015" defaultBinding="true">
</EspBinding>
</EspProcess>
</Software>
</Environment>
