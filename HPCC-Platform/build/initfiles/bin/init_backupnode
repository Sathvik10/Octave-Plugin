source /opt/HPCCSystems/etc/init.d/hpcc_common
set_environmentvars
source /opt/HPCCSystems/sbin/hpcc_setenv ""
component=$(basename ${PWD})
logpthtail="$(date +%Y_%m_%d_%H_%M_%S)"
export logfile="/var/log/HPCCSystems/${component}/${component}_${logpthtail}.log"

if [[ ! -e "/var/lib/HPCCSystems/${component}/backupnode.conf" ]]; then
    log "Cannot locate backupnode.conf"
    exit 1
fi
cfg.parser /var/lib/HPCCSystems/${component}/backupnode.conf
cfg.section.default

exec 2>/var/log/HPCCSystems/${component}/${component}.debug
set -x

OFS=${IFS}
IFS=','
read -a thorlist <<< "${thorlist}"
IFS=${OFS}

log "Writing out pid file"
echo "$$" > /var/run/HPCCSystems/${component}.pid

log "Starting Backupnode for the following targets:"
for i in ${thorlist[@]}; do
    log "-- ${i}"
done


trap "pkill -P $$;log \"Terminated init_backupnode\";exit 0" SIGINT SIGTERM

for target in ${thorlist[@]}; do
    /opt/HPCCSystems/sbin/backup.sh ${target} ${logfile} &
done

wait
